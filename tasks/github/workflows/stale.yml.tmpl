name: stale

on:
  schedule:
    - cron: '0 0 * * *'
  workflow_dispatch:

permissions:
  issues: write
  pull-requests: write

jobs:
  stale:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/stale@v10
        with:
          stale-issue-message:
            "This issue has been open for **{{.DaysBeforeStale}} days** with no activity. Remove
            the stale label or add a comment or it will be closed in another
            **{{.DaysBeforeClose}} days**."
          stale-pr-message:
            "This PR has been open for **{{.DaysBeforeStale}} days** with no activity. Remove the
            stale label or add a comment or it will be closed in another **{{.DaysBeforeClose}}
            days**."
          close-issue-message:
            "This issue was closed because it has been stalled for a long time
            with no activity."
          close-pr-message:
            "This PR was closed because it has been stalled for a long time with
            no activity."
          days-before-stale: {{.DaysBeforeStale}}
          days-before-close: {{.DaysBeforeClose}}
          exempt-pr-labels: {{.ExemptLabels}}
          exempt-issue-labels: {{.ExemptLabels}}
